{
  "compilerOptions": {
    // shadcn/ui
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "node"
    ], // this helps resolve both 'path' and ESM types
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "lib": [
      "DOM",
      "ES5",
      "ES2015.Promise"
    ],
  },
  "include": [
    "src",
    "vite.config.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}